@model IEnumerable<Category>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">
                            Listagem de Categorias
                        </h3>
                    </div>
                    <div class="card-body">

                        <a asp-controller="Category" asp-action="Insert">
                            Incluir novo
                        </a>

                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                                    <th>@Html.DisplayNameFor(model => model.Parent)</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var p in Model)
                                {
                                    <tr>
                                        <td>@p.Id</td>
                                        <td>@p.Name</td>
                                        <td>@p.Parent?.Name</td>
                                        <td>
                                            <div class="row">
                                                <div class="col-4">
                                                    <a asp-controller="Category"
                                                       asp-action="Edit"
                                                       asp-route-id="@p.Id">
                                                        Editar
                                                    </a>
                                                </div>
                                                <div class="col-4">
                                                    <a asp-controller="Category"
                                                       asp-action="Delete"
                                                       asp-route-id="@p.Id">
                                                        Excluir
                                                    </a>
                                                </div>
                                                <div class="col-4">
                                                    <a asp-controller="Category"
                                                        asp-action="Insert" 
                                                        asp-route-parentId="@p.Id">
                                                        Criar submenu
                                                    </a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>